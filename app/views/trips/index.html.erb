
<div class="main-form">

  <h1 class ='sign'>Hello,<%=@user.username%></h1>

  <h2>Trips</h2>

  <button type="button" name="new-trip" class='submit-form'><%= link_to 'Create Trip', new_trip_path %></button>


  <% @trips.each do |trip| %>

  <% end %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Beginning Date</th>
        <th>Ending Date</th>
        <th>Budget
        <th>Action
      </tr>
    </thead>

    <tbody>
      <% @trips.each do |trip| %>
        <tr>

          <%= form_for(trip) do |f| %>
          <td><%= f.text_field :name %></td>
          <td><%= f.text_field :beg_date %></td>
          <td><%= f.text_field :end_date %></td>
          <td><%= f.text_field :budget %></td>
          <td>
            <%= f.submit %>
          <% end %>
          <%= form_tag trip_path(trip.id), method: "delete" do %>
              <%= submit_tag "Delete" %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
