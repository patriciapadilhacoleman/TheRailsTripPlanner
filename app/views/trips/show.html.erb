<div class="main-form">
<%= form_for @trip do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>


  <%= f.label :budget %>
  <%= f.text_field :budget %>


  <%= f.submit "Update",class:'submit' %>
<% end %>
</div>

<div class="main">

  <button type="button" name="new-ticket" class='submit-form'><%= link_to 'Create a Trip', new_trip_ticket_path %></button>


</div>
